<theme>

	<formatVersion>4</formatVersion>
	<feature supported="carousel">
		<view name="system">
			<carousel name="systemcarousel">
				<type>vertical</type>
				<size>1 1</size>
				<pos>0 0.0</pos>
				<color>00000000</color>
				<maxLogoCount>3</maxLogoCount>
			</carousel>

			<text name="systemInfo">
				<alignment>center</alignment>
				<backgroundColor>00000000</backgroundColor>
				<color>ffffff</color>
				<pos>0.0 0.95</pos>
				<size>1 0.05</size>
				<fontPath>./_inc/fonts/RED.ttf</fontPath>
				<fontSize>0.025</fontSize>
			</text>

			<image name="background_pattern" extra="true">
				<path>./_inc/images/bg_system.png</path>
				<origin>0.5 0.5</origin>
				<pos>0.5 0.5</pos>
				<size>1 1</size>
			</image>
		</view>
	</feature>

	<view name="system, basic, detailed">

		<image name="background_pattern" extra="true">
			<path>./_inc/images/bg.png</path>
			<origin>0.5 0.5</origin>
			<pos>0.5 0.5</pos>
			<size>1 1</size>
		</image>

		<helpsystem name="help">
			<textColor>FFFFFF</textColor>
			<iconColor>FFFFFF</iconColor>
			<fontPath>./_inc/fonts/RED.ttf</fontPath>
			<fontSize>0.02</fontSize>
		</helpsystem>

	</view>

	<view name="basic">

		<image name="background_logo" extra="true">
			<path>./_inc/images/bg_color.png</path>
			<origin>0 0</origin>
			<pos>0 0</pos>
			<size>1 0.18</size>
			<color>FFFFFF99</color>
		</image>

			<image name="logo">
				<origin>0.0 0.0</origin>
				<pos>0.0 0.0</pos>
				<maxSize>1.0 1.0</maxSize>
			</image>


			<textlist name="gamelist">
				<selectorColor>000000</selectorColor>
				<selectedColor>FFFFFF</selectedColor>
				<primaryColor>000000</primaryColor>
				<secondaryColor>888888</secondaryColor>
				<fontPath>./_inc/fonts/Impact.otf</fontPath>
				<pos>0.05 0.2</pos>
				<size>0.9 0.71</size>
				<fontSize>0.04</fontSize>
			</textlist>

	</view>

	<view name="detailed, video">
			<image name="logo">
				<origin>0.0 0.0</origin>
				<pos>0.015 0.05</pos>
				<maxSize>0.35 0.1</maxSize>
			</image>

			<image name="md_marquee">
				<pos>0.55 0.035</pos>
				<origin>0 0</origin>
				<maxSize>0.34 0.2</maxSize>
			</image>


			<textlist name="gamelist">
				<selectorColor>FFFFFF</selectorColor>
				<selectedColor>000000</selectedColor>
				<primaryColor>FFFFFF</primaryColor>
				<secondaryColor>888888</secondaryColor>
				<fontPath>./_inc/fonts/Impact.otf</fontPath>
				<pos>0.01 0.25</pos>
				<size>0.25 0.68</size>
				<fontSize>0.03</fontSize>
				<horizontalMargin>0.01</horizontalMargin>
			</textlist>

			<image name="md_image">
				<origin>0.0 0.0</origin>
				<pos>0.533 0.26</pos>
				<maxSize>0.334 0.4</maxSize>
			</image>


			<text name="md_lbl_releasedate, md_lbl_developer, md_lbl_publisher, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_rating">
				<color>000000</color>
				<forceUppercase>1</forceUppercase>
				<fontPath>./_inc/fonts/Impact.otf</fontPath>
				<fontSize>0.02</fontSize>
				<size>0.24 0.007</size>
			</text>

			<text name="md_developer, md_publisher, md_genre, md_players, md_playcount">
				<color>000000</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/FOT-SkipStd-B.otf</fontPath>
				<fontSize>0.014</fontSize>
				<size>0.1 0.02</size>
			</text>
			<datetime name="md_releasedate, md_lastplayed">
				<color>000000</color>
				<forceUppercase>0</forceUppercase>
				<fontPath>./_inc/fonts/FOT-SkipStd-B.otf</fontPath>
				<fontSize>0.014</fontSize>
				<size>0.075 0.02</size>
			</datetime>

				<text name="md_lbl_genre">
					<pos>0.881 0.23</pos>
				</text>
				<text name="md_genre">
					<pos>0.881 0.25</pos>
				</text>

				<text name="md_lbl_developer">
					<pos>0.883 0.32</pos>
				</text>
				<text name="md_developer">
					<pos>0.883 0.34</pos>
				</text>

				<text name="md_lbl_publisher">
					<pos>0.893 0.41</pos>
				</text>
				<text name="md_publisher">
					<pos>0.893 0.43</pos>
				</text>

				<text name="md_lbl_releasedate">
					<pos>0.901 0.50</pos>
				</text>
				<datetime name="md_releasedate">
					<pos>0.901 0.52</pos>
				</datetime>

				<text name="md_lbl_playcount">
					<pos>0.907 0.59</pos>
				</text>
				<text name="md_playcount">
					<pos>0.907 0.61</pos>
				</text>

				<text name="md_lbl_lastplayed">
					<pos>0.914 0.68</pos>
				</text>
				<datetime name="md_lastplayed">
					<pos>0.914 0.70</pos>
				</datetime>

				<text name="md_lbl_rating">
					<pos>0.921 0.77</pos>
				</text>
				<rating name="md_rating">
					<pos>0.921 0.79</pos>
					<size>0.012 0.02</size>
					<filledPath>./_inc/images/star_full.png</filledPath>
					<unfilledPath>./_inc/images/star_hollow.png</unfilledPath>
				</rating>

				<text name="md_lbl_players">
					<pos>0.932 0.86 </pos>
				</text>
				<text name="md_players">
					<pos>0.935 0.88</pos>
				</text>

			<text name="md_description">
				<pos>0.53 0.77</pos>
				<size>0.38 0.19</size>
				<color>FFFFFF</color>
				<fontPath>./_inc/fonts/FOT-SkipStd-B.otf</fontPath>
				<fontSize>0.026</fontSize>
				<alignment>left</alignment>
				<forceUppercase>0</forceUppercase>
				<lineSpacing>1.6</lineSpacing>
			</text>

	</view>

	<feature supported="video">

		<view name="video">

			<video name="md_video">
				<origin>0.0 0.0</origin>
				<pos>0.533 0.26</pos>
				<maxSize>0.334 0.4</maxSize>
				<delay>1.0</delay>
				<showSnapshotNoVideo>true</showSnapshotNoVideo>
				<showSnapshotDelay>true</showSnapshotDelay>
			</video>

		</view>

	</feature>

</theme>
